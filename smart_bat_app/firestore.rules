rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own sessions
    match /sessions/{sessionId} {
      allow read, write, create, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId);
      
      // Allow authenticated users to read/write shots in their sessions
      match /shots/{shotId} {
        allow read, write, create, delete: if request.auth != null && 
          (request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId);
      }
    }
    
    // Allow authenticated users to read/write their own user profile
    match /users/{userId} {
      allow read, write, create, delete: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Allow coaches to read/write coach documents
    match /coaches/{coachId} {
      allow read, write, create, delete: if request.auth != null && 
        request.auth.uid == coachId;
    }
    
    // Allow coaches to read their linked players' data
    match /coach_players/{playerId} {
      allow read, write, create, delete: if request.auth != null && 
        request.auth.uid == resource.data.coachId;
    }
    
    // Allow players to read their coach link data
    match /player_coaches/{coachId} {
      allow read, write, create, delete: if request.auth != null && 
        request.auth.uid == resource.data.playerId;
    }
    
    // Allow notifications for authenticated users
    match /notifications/{notificationId} {
      allow read, write, create, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Allow analytics data for authenticated users
    match /analytics/{userId} {
      allow read, write, create, delete: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}